<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/appbar_holder"/>

    <LinearLayout
        android:id="@+id/appbar_holder"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey"/>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.TabLayout
                android:id="@+id/main_tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabSelectedTextColor="@color/primary"
                app:tabTextColor="#8e8d8d"
                app:tabIndicatorColor="@color/primary"
                app:tabTextAppearance="@style/NavigationTabTextAppeareance">

                <android.support.design.widget.TabItem
                    android:id="@+id/tab_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_dashboard"
                    android:text="Dashboard" />

                <android.support.design.widget.TabItem
                    android:id="@+id/tab_services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/history"
                    android:text="Services"/>

                <android.support.design.widget.TabItem
                    android:id="@+id/tab_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/scan_icon"
                    android:text="Scan" />

                <android.support.design.widget.TabItem
                    android:id="@+id/tab_garage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/garage_white_3x"
                    android:text="MyGarage" />

                <android.support.design.widget.TabItem
                    android:id="@+id/tab_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_notifications_white_24dp"
                    android:text="Notification" />

            </android.support.design.widget.TabLayout>

        </android.support.design.widget.BottomNavigationView>

    </LinearLayout>

</RelativeLayout>