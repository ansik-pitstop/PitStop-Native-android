<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.issue_detail.IssueDetailsActivity">


    <Button
        android:id="@+id/request_service_bn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/color_button_primary"
        android:drawableRight="@drawable/request_service_button"
        android:onClick="requestService"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Request Service"
        android:textColor="@color/white"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/issues_vp"
        android:layout_above="@id/request_service_bn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
