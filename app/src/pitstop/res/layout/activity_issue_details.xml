<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.issue_detail.IssueDetailsActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content">

        <Button
            android:visibility="gone"
            android:id="@+id/request_service_bn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/color_button_primary"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawableRight="@drawable/request_service_button"
            android:text="@string/request_service_title"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/move_history_bn"
            android:textColor="@color/white"
            android:text="Move to Current Services"
            android:background="@drawable/color_button_primary"
            android:drawableRight="@drawable/ic_move_history"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/issues_vp"
        android:layout_above="@id/request_service_bn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
