<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f6f6f6">

    <RelativeLayout
        android:id="@+id/no_connect_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/noConnectButton"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="We couldn't get your cars"
            android:textAlignment="center"
            android:textColor="#aaaaaa"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/noConnectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/color_button_primary"
            android:onClick="refreshClicked"
            android:padding="16dp"
            android:text="Tap here to try again"
            android:textAllCaps="false"
            android:textColor="#efefef"
            android:textSize="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no_car_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/no_car_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/no_car_line_2"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="There are no cars"
            android:textAlignment="center"
            android:textColor="#aaaaaa"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/no_car_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/addCarButton"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="in your dashboard"
            android:textAlignment="center"
            android:textColor="#aaaaaa"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/addCarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/color_button_primary"
            android:onClick="startAddCarActivity"
            android:padding="16dp"
            android:text="Tap here to add your first car"
            android:textAllCaps="false"
            android:textColor="#efefef"
            android:textSize="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:id="@+id/carName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/car_connected_indicator_layout"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/circle_indicator_stroke"/>

                <TextView
                    android:id="@+id/car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/car_details_components_layout"
                    android:text="Your car"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/dealership_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/dealership_action_icons"
                android:gravity="center_vertical"
                android:text="Dealership"
                android:textSize="18sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_nav_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carName"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <RelativeLayout
                android:id="@+id/dashboard_chat_dealership"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/color_button_grey"
                android:elevation="3dp"
                android:onClick="startChat"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_message_light_blue_500_24dp"/>

                    <TextView
                        android:id="@+id/textView48"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toEndOf="@+id/imageView19"
                        android:text="Message Dealer"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dashboard_car_scan_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_toRightOf="@+id/phone_layout"
                android:layout_weight="1"
                android:background="@drawable/color_button_grey"
                android:elevation="3dp"
                android:onClick="scanClicked"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_search_light_blue_500_24dp"/>

                    <TextView
                        android:id="@+id/textView49"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toEndOf="@+id/imageView21"
                        android:text="Scan Vehicle"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/car_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_nav_container"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/dealership_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dealership_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="4dp"
                    android:layout_toLeftOf="@+id/dealership_action_icons"
                    android:gravity="center_vertical"
                    android:text="Dealership"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/dealership_action_icons"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <RelativeLayout
                            android:id="@+id/phone_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/address_layout"
                            android:layout_weight="1"
                            android:paddingBottom="6dp"
                            android:paddingTop="6dp">

                            <ImageView
                                android:id="@+id/imageView20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_phone_light_blue_500_24dp"/>

                            <TextView
                                android:id="@+id/dealership_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/imageView20"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:layout_toEndOf="@+id/imageView20"
                                android:maxLines="1"
                                android:text="New Text"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/address_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/address_layout"
                            android:layout_weight="1"
                            android:paddingBottom="6dp"
                            android:paddingTop="6dp">

                            <ImageView
                                android:id="@+id/imageView22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_location_on_light_blue_500_24dp"/>

                            <TextView
                                android:id="@+id/dealership_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/imageView22"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:layout_toEndOf="@+id/imageView22"
                                android:maxLines="1"
                                android:text="New Text"/>
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_info_layout"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/service_count_background"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/severity_critical_indicator"/>

            <TextView
                android:id="@+id/service_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/car_details_components_layout"
                android:fontFamily="sans-serif-light"
                android:text="VEHICLE ISSUES"
                android:textColor="#000"
                android:textSize="16sp"/>
        </LinearLayout>

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/request_service_placeholder"
            android:layout_below="@+id/linearLayout8"
            android:layout_marginTop="4dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/car_issues_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"/>

            <!--<android.support.design.widget.FloatingActionButton-->
                <!--android:id="@+id/add_preset_issues"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="@dimen/activity_horizontal_margin"-->
                <!--android:onClick="addCustomIssues"-->
                <!--android:src="@drawable/ic_add_preset_issues"-->
                <!--app:backgroundTint="@color/primary"-->
                <!--app:layout_anchor="@id/car_issues_list"-->
                <!--app:layout_anchorGravity="bottom|right|end"/>-->

        </android.support.design.widget.CoordinatorLayout>

        <Button
            android:id="@+id/request_service_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Request Service"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bffeffff"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Loading"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:indeterminate="true"/>
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/dashboard_request_service_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_button_rectangle_primary"
        android:drawableRight="@drawable/request_service_button"
        android:elevation="2dp"
        android:onClick="requestMultiService"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/service_request_button"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>