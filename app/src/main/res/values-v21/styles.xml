<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorAccent">@color/highlight</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/DatePickerDialogTheme</item>

        <item name="android:windowContentTransitions">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/highlight</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/DatePickerDialogTheme</item>

        <item name="android:windowContentTransitions">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:colorAccent">@color/highlight</item>
        <item name="android:colorControlActivated">@color/primary_light</item>
    </style>

    <style name="DatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/primary</item>
    </style>

    <style name="DialogAnimations"/>

    <style name="DialogAnimations.slide">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out_left</item>
    </style>

    <style name="SplashTheme" parent="AppNoActionBarTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="AddCarButtonStyle">
        <item name="android:background">#FFEAEAEA</item>
    </style>

</resources>