<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/emission_result_holder"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/emission_result"
                android:layout_toLeftOf="@+id/result_right_chevron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="Unavailable"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Emissions Result"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black" />

            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/result_right_chevron"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_chevron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <include
            layout="@layout/divider" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/emissions_content"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
            android:visibility="gone"
            android:id="@+id/emissions_shared_content"
            layout="@layout/layout_shared_emissions_content"/>

        <include
            android:visibility="gone"
            android:id="@+id/petrol_emissions_content"
            layout="@layout/layout_petrol_emissions_content"/>

        <include
            android:visibility="gone"
            android:id="@+id/diesel_emissions_content"
            layout="@layout/layout_diesel_emissions_content"/>

        <include
            android:visibility="gone"
            android:id="@+id/view_ready_steps"
            layout="@layout/layout_ready_steps"/>

    </LinearLayout>

</LinearLayout>