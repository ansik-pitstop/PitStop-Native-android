<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="8dp"
    android:background="#FFFFFF"
    android:elevation="10dp"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    >

    <ImageView
        android:layout_gravity="center_vertical"
        android:src="@drawable/notification_default_3x"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/notification_image"
        />
    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notificationTitle"
            android:textSize="20dp"
            android:text="Welcome to Pitstop!"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_below="@id/notificationTitle"
            android:text="This is your first Pitstop notification. Welcome to Pitstop"
            android:id="@+id/notificationDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <TextView
        android:id="@+id/dateTV"
        android:textSize="10dp"
        android:text="10/10/2017"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        />



</LinearLayout>


