<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:elevation="10dp">

    <RelativeLayout
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/notification_default_3x"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/notification_image"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/notification_image"
            android:id="@+id/notificationTitle"
            android:textSize="18sp"
            android:text="Welcome to Pitstop!"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/notification_image"
            android:layout_below="@id/notificationTitle"
            android:text="This is your first Pitstop notification. Welcome to Pitstop"
            android:id="@+id/notificationDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/dateTV"
            android:gravity="end"
            android:textSize="10dp"
            android:text="10/10/2017"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />



    </RelativeLayout>
    <include
        layout="@layout/divider"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@id/notificationDescription" />


</LinearLayout>





