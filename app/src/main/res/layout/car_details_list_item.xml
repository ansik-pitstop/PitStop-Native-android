<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clipToPadding="false"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:focusableInTouchMode="false">


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/list_car_item"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardElevation ="2dp"
            android:background="#fff"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:clipToPadding="false">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/image_icon"
                android:layout_toStartOf="@+id/image_icon">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISSUE"
                    android:id="@+id/title"
                    android:textIsSelectable="false"
                    android:textSize="22dp"
                    android:maxLines="1"
                    android:textColor="@color/highlight"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="labflasf asdfasdfas fasdfasd fdas fads fasd fasdfasdfasd fas fas dfas dfa sfadsa sdf asd fsa df"
                    android:id="@+id/description"
                    android:layout_marginRight="8dp"
                    android:singleLine="false"
                    android:maxLines="3"
                    android:autoText="false" />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/image_icon"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>