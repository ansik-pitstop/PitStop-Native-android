<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bg"
        android:src="@drawable/slider3"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/imageView5"
            android:layout_margin="32dp"
            android:src="@drawable/whitelogo" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="First Name"
                android:id="@+id/firstName"
                android:singleLine="true"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_weight="1"
                android:textColorHint="#dedede"
                android:textColor="#efefef"
                android:backgroundTint="#dedede" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Last Name"
                android:id="@+id/lastName"
                android:singleLine="true"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:textIsSelectable="false"
                android:layout_weight="1"
                android:textColorHint="#dedede"
                android:textColor="#efefef"
                android:backgroundTint="#dedede" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:hint="Phone Number"
            android:id="@+id/phone"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:textIsSelectable="false"
            android:textColorHint="#dedede"
            android:textColor="#efefef"
            android:backgroundTint="#dedede" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Email"
            android:id="@+id/email"
            android:textColorHint="#dedede"
            android:textColor="#efefef"
            android:backgroundTint="#dedede" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:imeOptions="actionSend"
            android:id="@+id/password"
            android:textColorHint="#dedede"
            android:textColor="#efefef"
            android:backgroundTint="#dedede" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="#fff"
            android:onClick="loginOrSignUp"
            android:background="@drawable/color_button_primary"
            android:id="@+id/login_btn"
            android:elevation="6dp"
            android:layout_marginBottom="12dp"
            android:elegantTextHeight="true"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/fb_login_butt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fb_logo"
            android:paddingLeft="20dp"
            android:text="Log In with Facebook"
            android:onClick="loginFacebook"
            android:textColor="#efefef"
            android:background="@drawable/color_button_fb"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:onClick="forgotPassword"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:elegantTextHeight="true"
        android:id="@+id/sign_log_switcher_button"
        android:elevation="6dp"
        android:onClick="signUpSwitcher"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#00ffffff"
        android:layout_margin="6dp" />

</RelativeLayout>