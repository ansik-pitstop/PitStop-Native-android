<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppNoActionBarTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/my_vehicle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MY VEHICLE"
        android:padding="13dp"
        android:layout_below="@+id/toolbar"/>

    <RelativeLayout
        android:id="@+id/car_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_vehicle_text"
        android:elevation="2dp"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:background="#FFF">

        <LinearLayout
            android:id="@+id/car_info_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/car_details_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="car name"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/car_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:layout_marginRight="8dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/car_details_components_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/car_details_layout"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:id="@+id/service_count"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/dark_circular_background"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/car_connected_ind_button"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/service_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <Button
                    android:id="@+id/car_connected_ind_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Details"
                    android:background="@drawable/color_button_primary_car"
                    android:padding="16dp"
                    android:textColor="#fff"
                    android:elevation="12dp" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/mileage_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/car_info_linear_layout"
            android:background="@drawable/rounded_light_grey_background">

            <TextView
                android:id="@+id/mileage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mileage"
                android:labelFor="@+id/car_mileage_value"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/car_mileage_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:text="15798"/>

        </RelativeLayout>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/car_info_layout"
        android:layout_above="@+id/request_service_btn">
    </FrameLayout>

    <Button
        android:id="@+id/request_service_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Service"
        android:onClick="requestService"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/color_button_add_car"
        android:drawableRight="@drawable/request_service_button"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>