<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/car_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="18dp"
            android:background="#FFF">

            <RelativeLayout
                android:id="@+id/car_info_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/car_details_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/car_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="car name"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="8dp" />

                    <TextView
                        android:id="@+id/car_trim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/car_name"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:layout_marginRight="8dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/car_details_components_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <RelativeLayout
                        android:id="@+id/service_count_background"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/dark_circular_background"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/service_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                    <!--<Button
                        android:id="@+id/car_scan_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="SCAN"
                        android:background="@drawable/color_button_primary_car"
                        android:padding="10dp"
                        android:textColor="#fff"
                        android:elevation="12dp" />-->

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dealership_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_below="@+id/car_info_relative_layout">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>



                <RelativeLayout
                    android:id="@+id/dealership_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/dealership_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dealership"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"/>

                    <RelativeLayout
                        android:id="@+id/dealership_action_icons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:layout_alignParentRight="true">

                        <RelativeLayout
                            android:id="@+id/address_layout"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:elevation="3dp"
                            android:background="@drawable/grey_circular_background">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_pin_drop_red_400_18dp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/phone_layout"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:elevation="3dp"
                            android:layout_toRightOf="@+id/address_layout"
                            android:background="@drawable/grey_circular_background">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_phone_red_400_18dp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/chat_layout"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:elevation="3dp"
                            android:layout_toRightOf="@+id/phone_layout"
                            android:background="@drawable/grey_circular_background">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_message_red_400_18dp"/>
                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/car_issues_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/car_info_layout"
            android:layout_above="@+id/request_service_btn"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/request_service_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Service"
            android:onClick="requestMultiService"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/color_button_primary_car"
            android:drawableRight="@drawable/request_service_button"
            android:textColor="#fff"
            android:elevation="2dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bffeffff"
        android:id="@+id/loading_view"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Loading"
                android:id="@+id/loading_text"
                android:layout_gravity="center_horizontal"
                android:textColor="#000" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:layout_margin="16dp" />
            <!--<Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/button6"
                android:layout_gravity="center_horizontal"
                android:onClick="hideLoading" />-->
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>