<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/list_car_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/cardview_background_white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/issue_severity_indicator"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_warning_amber_300_24dp"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:tint="@color/dark_grey"
            android:src="@drawable/right_chevron"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="Issue is an issue unless its nottttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttt"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/image_icon"
            android:layout_toEndOf="@+id/issue_severity_indicator" />
    </RelativeLayout>

    <include layout="@layout/divider"/>
</LinearLayout>