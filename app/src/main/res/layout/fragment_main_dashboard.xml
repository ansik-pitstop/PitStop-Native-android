<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".MainDashboardFragment">

    <RelativeLayout
        android:id="@+id/no_car_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/no_car_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There are no cars"
            android:layout_above="@+id/no_car_line_2"
            android:layout_centerHorizontal="true"
            android:textColor="#aaaaaa"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/no_car_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="in your dashboard"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/addCarButton"
            android:textColor="#aaaaaa"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/addCarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/color_button_primary"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:padding="16dp"
            android:textAllCaps="false"
            android:text="Tap here to add your first car"
            android:textColor="#efefef"
            android:onClick="startAddCarActivity"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout7"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/car_connected_indicator_layout"
                android:src="@drawable/circle_indicator_stroke"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Car name"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/car_details_components_layout"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/linearLayout7"
            android:layout_marginBottom="6dp"
            android:weightSum="2">


            <RelativeLayout
                android:id="@+id/chat_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:background="@drawable/color_button_grey"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_gravity="bottom"
                android:layout_margin="6dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_message_light_blue_500_24dp"
                        android:id="@+id/imageView19"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message Dealer"
                        android:id="@+id/textView48"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView19"
                        android:layout_marginLeft="4dp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:elevation="3dp"
                android:layout_toRightOf="@+id/phone_layout"
                android:background="@drawable/color_button_grey"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/car_scan_btn"
                android:layout_margin="6dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_search_light_blue_500_24dp"
                        android:id="@+id/imageView21"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scan Vehicle"
                        android:id="@+id/textView49"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView21"
                        android:layout_marginLeft="4dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/car_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_below="@+id/linearLayout6"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/dealership_info_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dealership_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dealership"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/dealership_action_icons"
                    android:layout_alignParentLeft="true"
                    android:textSize="18sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/dealership_action_icons"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true">

                        <RelativeLayout
                            android:id="@+id/phone_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/address_layout"
                            android:layout_weight="1"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_phone_light_blue_500_24dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:id="@+id/imageView20" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Text"
                                android:id="@+id/dealership_phone"
                                android:layout_alignTop="@+id/imageView20"
                                android:layout_toEndOf="@+id/imageView20"
                                android:layout_marginLeft="8dp"
                                android:maxLines="1"
                                android:layout_centerVertical="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/address_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/address_layout"
                            android:layout_weight="1"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_location_on_light_blue_500_24dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:id="@+id/imageView22" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Text"
                                android:id="@+id/dealership_address"
                                android:layout_alignTop="@+id/imageView22"
                                android:layout_toEndOf="@+id/imageView22"
                                android:layout_marginLeft="8dp"
                                android:maxLines="1"
                                android:layout_centerVertical="true" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout8"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/car_info_layout">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/service_count_background"
                android:src="@drawable/severity_critical_indicator"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/service_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VEHICLE ISSUES"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/car_details_components_layout"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="6dp"
                android:textColor="#000"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/car_issues_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout8"
            android:layout_above="@+id/request_service_btn"
            android:scrollbars="vertical"
            android:layout_marginTop="4dp">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/request_service_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Service"
            android:onClick="requestMultiService"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/color_button_primary_car"
            android:drawableRight="@drawable/request_service_button"
            android:textColor="#fff"
            android:elevation="2dp"

            android:layout_alignParentBottom="true"/>
        <!--android:background="@drawable/color_button_primary_car"-->
        <!---->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bffeffff"
        android:id="@+id/loading_view"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Loading"
                android:id="@+id/loading_text"
                android:layout_gravity="center_horizontal"
                android:textColor="#000" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:layout_margin="16dp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>