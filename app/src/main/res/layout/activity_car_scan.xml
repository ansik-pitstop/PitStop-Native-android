<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CarScanActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/car_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar_overlay"
        app:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/mileage_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/mileage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:text="Mileage"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/car_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="3000009"
                android:layout_toRightOf="@+id/mileage_text"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/car_scan_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/car_scan"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scan_details_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_view_layout"
        android:layout_above="@+id/car_scan_btn">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkIssues"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/recalls_scan_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp">

                        <ImageView
                            android:id="@+id/car_recall_image"
                            android:layout_width="35dp"
                            android:layout_height="30dp"
                            android:src="@drawable/car_recall"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:id="@+id/recalls_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recalls"
                            android:layout_toRightOf="@+id/car_recall_image"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"/>

                        <include layout="@layout/loading_layout"
                            android:id="@+id/loading_recalls"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"/>

                        <RelativeLayout
                            android:id="@+id/recalls_state_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/recalls_state_image_icon"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_check_circle_green_400_36dp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/recalls_count_layout"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/grey_circular_background"
                            android:layout_gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_margin="2dp"
                            android:elevation="1dp">

                            <TextView
                                android:id="@+id/recalls_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#fff"
                                android:textSize="18sp"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <View
                    android:id="@+id/border1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_below="@+id/recalls_scan_details"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/services_scan_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/border1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp">

                        <ImageView
                            android:id="@+id/car_service_image"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/car_service"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"/>
                        <TextView
                            android:id="@+id/services_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Services"
                            android:layout_toRightOf="@+id/car_service_image"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"/>

                        <include layout="@layout/loading_layout"
                            android:id="@+id/loading_services"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"/>

                        <RelativeLayout
                            android:id="@+id/services_state_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/services_state_image_icon"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_check_circle_green_400_36dp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/services_count_layout"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/grey_circular_background"
                            android:layout_gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_margin="2dp"
                            android:elevation="1dp">

                            <TextView
                                android:id="@+id/services_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#fff"
                                android:textSize="18sp"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <View
                    android:id="@+id/border2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_below="@+id/services_scan_details"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/engine_scan_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/border2">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp">

                        <ImageView
                            android:id="@+id/car_engine_image"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/car_engine"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:id="@+id/engine_issues_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/car_engine_image"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:text="Engine issues"/>

                        <include layout="@layout/loading_layout"
                            android:id="@+id/loading_engine_issues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"/>

                        <RelativeLayout
                            android:id="@+id/engine_issues_state_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/engine_issues_state_image_icon"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_check_circle_green_400_36dp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/engine_issues_count_layout"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/grey_circular_background"
                            android:layout_gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_margin="2dp"
                            android:elevation="1dp">

                            <TextView
                                android:id="@+id/engine_issues_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#fff"
                                android:textSize="18sp"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <Button
        android:id="@+id/car_scan_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan Car"
        android:background="@drawable/color_button_primary_car"
        android:textColor="#fff"
        android:elevation="2dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
