<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    tools:context="com.pitstop.CarDetailsActivity"
    android:weightSum="10">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/evcheck_layout"
        android:elevation="2dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviornmental Pass"
            android:id="@+id/evcheck" />

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:layout_weight="3"
        android:elevation="4dp"
        android:background="#2196F3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car is Not Connected"
            android:textSize="24sp"
            android:textColor="#fff"
            android:id="@+id/textView34"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ListView android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/car_event_listview"
        android:choiceMode="singleChoice"
        android:contextClickable="false"
        android:dividerHeight="0dp"
        android:divider="@null"

        android:clipToPadding="false"
        android:layout_weight="7" />

</LinearLayout>
